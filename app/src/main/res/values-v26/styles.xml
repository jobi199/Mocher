<?xml version="1.0" encoding="utf-8"?>
<resources>

    //ImageViews

    <style name="image_view_country">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:background">@drawable/background_circle</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:onClick">saveImageViewState</item>
    </style>

    <style name="image_view_country_360dp">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:background">@drawable/background_circle</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:onClick">saveImageViewState</item>
    </style>

    <style name="image_view_power_spinner_reset">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:layout_weight">8</item>
    </style>

    //Result Page - Result Entry

    <style name="text_view_tutorial_like_dislike">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>